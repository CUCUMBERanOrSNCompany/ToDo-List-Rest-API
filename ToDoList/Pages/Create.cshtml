@page
@model ToDoList.Pages.CreateModel
@{ Layout = "_Layout"; }

<h2>Create a Task</h2>

<form method="post">
    <div>
        <label for="Title">Title:</label>
        <input asp-for="Task.Title" class="form-control" />
        <span asp-validation-for="Task.Title" class="text-danger"></span>
    </div>

    <div>
        <label for="Description">Description:</label>
        <textarea asp-for="Task.Description" class="form-control"></textarea>
        <span asp-validation-for="Task.Description" class="text-danger"></span>
    </div>

    <div>
        <label for="DueDate">Due Date:</label>
        <input asp-for="Task.DueDate" type="date" class="form-control" />
        <span asp-validation-for="Task.DueDate" class="text-danger"></span>
    </div>

    <div>
        <input type="submit" value="Create Task" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
